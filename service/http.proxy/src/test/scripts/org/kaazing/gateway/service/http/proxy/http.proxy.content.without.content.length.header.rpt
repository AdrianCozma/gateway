connect tcp://localhost:8110
connected

write "GET /get HTTP/1.1\r\n"
write "Host: localhost:8110\r\n"
write "User-Agent: Mozilla/5.0\r\n"
write "Connection: keep-alive\r\n"
write "Upgrade-Insecure-Requests: 1\r\n"
write "\r\n"

read status "200" /.*/

write "PUT /hello.htm HTTP/1.1"
write "User-Agent: Mozilla/5.0\r\n"
write "Host: localhost:8080\r\n"
write "Content-Length: 24\r\n"
write "Content-Type: application/octet-stream\r\n"
write [0x60 0x7A 0x8E 0x98 0x18 0xA8 0xFC 0x7C 0xE6 0xC7 0x5B 0x48 0x52 0xC4 0x21 0x85 0x52 0x5C 0x7D 0xDC 0x20 0x91 0x90 0x63]

write "Connection: close\r\n"
write "\r\n"

read status "200" /.*/

accept tcp://localhost:8080
accepted
connected

read "GET /get HTTP/1.1\r\n"
read /Via: 1.1 kaazing-.+/ "\r\n"
read "User-Agent: Mozilla/5.0\r\n"
read "Upgrade-Insecure-Requests: 1\r\n"
read "Host: localhost:8080\r\n"
read "Connection: close\r\n"
read "\r\n"

write status "200" "OK"

read "PUT /hello.htm HTTP/1.1"
read "Host: localhost:8110\r\n"
read "User-Agent: Mozilla/5.0\r\n"
read "Content-Length: 24\r\n"
read "Content-Type: application/octet-stream\r\n"
read [0x60 0x7A 0x8E 0x98 0x18 0xA8 0xFC 0x7C 0xE6 0xC7 0x5B 0x48 0x52 0xC4 0x21 0x85 0x52 0x5C 0x7D 0xDC 0x20 0x91 0x90 0x63]

read "Connection: keep-alive\r\n"
read "\r\n"

write status "200" "OK"

close
closed
