#
# client
#

connect http://localhost:8110/intermediary
connected

write method "POST"
write header host
write header content-length
write "This is some data"
write close
read status "504" "Gateway Timeout"

#
# server
#

accept tcp://localhost:8080
accepted
connected

read "POST" /.*\r\n/
read /Via: 1.1 kaazing-.+/ "\r\n"
read /User-Agent:.+/ "\r\n"
read "Host:" /.*\r\n/
read "Content-Length: " "17" "\r\n"
read "\r\n"
read "This is some data"
close
closed
